<%= button_to 'New Post', new_post_path, :class => 'btn btn-default' %>
<!-- <button class="btn btn-default" href="/posts/new">New Post</button> -->

<% if @tag == "news" %> 
	<div class="news_title"><h1>News</h1></div><br>
<% elsif @tag == "algorithm" %>
	<div class="algo_title"><h1>Algorithms</h1></div><br>
<% elsif @tag == "interview" %>
	<div class="interview_title"><h1>Interview Questions</h1></div><br>
<% else %>
	<div class="posts_title"><h1>All Posts</h1></div><br>
<% end %>

<% if @posts.empty? %> 
	<%= render "posts/empty" %>
<% else %> 
	<table>
	  <% @posts.each do |post| %>
		<tr><div class="panel panel-default">
		    <div class="panel-heading">
		      <h4><%= post.title %></h4>
		    </div>
		    <div class="panel-body">
		      <small><%= time_ago_in_words(post.created_at) %> ago</small>
		      <br>
		      <%= post.text %>
		      <% post.tags.any? %>
			    <% post.tags.each do |tag| %>
			    <%= link_to tag.name, tagged_url(:tag => tag.name) %>
			  <% end %>

		      <div class="pull-right"> 
			      <%= link_to 'Edit', edit_post_path(post) %>
				  <%= link_to 'Delete', post_path(post),
                    method: :delete, data: { confirm: 'Are you sure?' } %>
			  </div> 
		    </div>
		  </div>
		</tr>
		<% end %>
	</table>
<% end %>