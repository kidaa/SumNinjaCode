<% if params[:scope] == "news" %> 
	<div class="news_title"><h1>News</h1></div><br>
	<% if @posts.news.empty? %> 
		<%= render "posts/empty" %>
	<% else %> 
		<table>
		  <% @posts.news.each do |post| %>
			<tr><div class="panel panel-default">
			    <div class="panel-heading">
			      <p><%= post.title %></p>
			    </div>
			    <div class="panel-body">
			      <small><%= time_ago_in_words(post.created_at) %> ago</small>
			      <br>
			      <%= post.text %>

			      <!--<div class="pull-right"> <%= link_to 'Edit', edit_post_path(post) %>
				  <%= link_to 'Delete', {:controller=>:posts,:action=>:destroy, :id=>post}, :method=>:delete %></div> -->
			    </div>
			  </div>
			</tr>
			<% end %>
		</table>
	<% end %>
