<% else %>
	<div class="algo_title"><h1>All Posts</h1></div><br>
	<% if @posts.empty? %> 
		<%= render "posts/empty" %>
	<% else %> 
		<table>
		  <% @posts.each do |post| %>
			<tr><div class="panel panel-default">
			    <div class="panel-heading">
			      <div style="float: right; vertical-align: middle;"> 
			        <% if post.tag == "news" %>
			          <span class="fa-stack fa-lg">
			            <i class="fa fa-square fa-stack-2x"></i>
			            <i class="fa fa-globe fa-stack fa-inverse"></i>
			          </span>
			        <% elsif post.tag == "interview" %>
			          <span class="fa-stack fa-lg">
			            <i class="fa fa-square fa-stack-2x"></i>
			            <i class="fa fa-code fa-stack fa-inverse"></i>
			          </span>
			        <% else %>
			          <span class="fa-stack fa-lg">
			            <i class="fa fa-square fa-stack-2x"></i>
			            <i class="fa fa-terminal fa-stack fa-inverse"></i>
			          </span>
			        <% end %>
			      </div>
			      <p>
			      	<%= post.title %>
			    </div>
			    <div class="panel-body">
			      <small><%= time_ago_in_words(post.created_at) %> ago</small>
			      <br>
			      <%= post.text %>

			      <!--<div class="pull-right"> <%= link_to 'Edit', edit_post_path(post) %>
				  <%= link_to 'Delete', {:controller=>:posts,:action=>:destroy, :id=>post}, :method=>:delete %></div> -->
			    </div>
			  </div>
			</tr>
			<% end %>
		</table>
	<% end %>
<% end %>