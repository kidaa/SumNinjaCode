extends layout

block content
  include partials/header
    // Posts Section
  .container#posts
    .row
      //- .col-sm-10
      - var posts = getPosts(0,5)
      - var page  = 1
      - each post in posts
        include partials/post
      //- .col-sm-2
        .sidebar-nav
          ul.nav.nav-list
            li.nav-header categories
            - each cat in getCategories()
              li
                a(href=categoryURL(cat)) #{cat}
            .nav-header tags
            .container.tags
              - each tag in getTags()
                a(href=tagUrl(tag))
                  span.label.label-info.label-tag #{tag}
                br